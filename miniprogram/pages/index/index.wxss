.page{
    width: 95%;
    margin: 0 auto;
    padding: 0;
    font-size: 40rpx;
    text-align: center;
}
.options{
    width: 100%;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}
.options .item{
    width: 40%;
    margin: 20rpx auto;
    padding: 20rpx;
    border: 1px solid #eeeeee;
    border-radius: 20rpx;
}
.options .item image{
    width: 80%;
    border: 1px solid #ff0000;
    display: block;
    margin: 20rpx auto;
}