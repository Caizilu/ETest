.body{
    width: 100%;
    height: 100%;
    position: absolute;
}
.page{
    width: 95%;
    height: 100%;
    margin: 0 auto;
    padding: 0;
    font-size: 40rpx;
    text-align: center;
}
.picker{
    width: 95%;
    height: 80rpx;
    line-height: 80rpx;
    margin: 20rpx auto;
    border-radius: 40rpx;
    background: #ffffff;
}
.options{
    width: 100%;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}
.options .item{
    width: 40%;
    margin: 20rpx auto;
    padding: 20rpx;
    border: 1px solid #eeeeee;
    border-radius: 20rpx;
    background: #ffffff;
}
.options .item image{
    width: 80%;
    border: 1px solid #ff0000;
    display: block;
    margin: 20rpx auto;
}
.bg{
    position: absolute;
    top: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
}