.head {
    width: 100%;
    height: 80rpx;
    font-weight: bold;
    line-height: 80rpx;
    padding-left: 30rpx;
    border-bottom: 1px solid #e5e5e5;
}

.test{
    width: 100%;
    height: 180rpx;
    display: flex;
    flex-direction: row;
    border-bottom: 1px solid #e5e5e5;
}

.test image{
    display: block;
    width: 100rpx;
    height: 100rpx;
    margin: 50rpx 0rpx 30rpx 40rpx;
}

.test .item1{
    width: 80rpx;
    height: 180rpx;
    line-height: 200rpx;
    text-align: center;
}

.test .item2{
    width: 300rpx;
    height: 180rpx;
    text-align: left;
    padding-left: 20rpx;
    padding-top: 60rpx;
    font-size: 35rpx;
}

.test .time{
    font-size: 25rpx;
    color: #bbbbbb;
    margin-top: 5rpx;
}

.test .item3{
    width: 300rpx;
    height: 180rpx;
    text-align: left;
    padding-left: 20rpx;
    padding-top: 60rpx;
    font-size: 35rpx;
}

.test .btn{
    width: 100rpx;
    height: 50rpx;
    line-height: 50rpx;
    margin: 0 auto;
    padding: 0;
    font-size: 25rpx;
    border-radius: 20rpx;
}

button::after {
    border: 0;
}